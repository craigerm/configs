{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "shopify-dev-mcp": {
      "type": "local",
      "command": ["npx", "-y", "@shopify/dev-mcp@latest"]
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "environment": {
        "ASDF_NODEJS_VERSION": "22.14.0"
      }
    }
  }
}
