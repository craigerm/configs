	name = craigerm

[color]
	ui = true

[core]
  autocrlf = input
  fileMode = false
  excludesfile = ~/.gitignore
  ;pager = bash -lc 'diff-highlight | strip_diff_leading_symbols | less -r' -

[grep]
	lineNumber = true

[alias]
	g = grep --break --heading --line-number

[color "branch"]
  current = yellow bold
  local = 179
  remote = 46

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = 009 bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "status"]
  added = 154
  changed = 203
  untracked = 226

