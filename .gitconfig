	name = Craig MacGregor

[color]
	ui = true

[core]
  autocrlf = input
  fileMode = false
  excludesfile = ~/.gitignore
  ; Require npm install -g diff-so-fancy
  pager = diff-so-fancy | less --tabs=4 -RFX

[grep]
	lineNumber = true

[alias]
	g = grep --break --heading --line-number

[color "branch"]
  current = yellow bold
  local = 179
  remote = 46

[color "diff"]
  meta = yellow bold
  new = green bold
  frag = magenta bold
  whitespace = red reverse
;  old = 009 bold

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "status"]
  added = 154
  changed = 203
  untracked = 226

