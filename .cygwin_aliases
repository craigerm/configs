# This will clear the screen (it's missing from default installation)
alias clear='echo -e -n "\E[2J"'
alias cls='clear'

# Other useful aliases
alias x='explorer .'

# Aliases for ruby stuff
alias rake='rake.bat'
alias gem='gem.bat'
alias erb='erb.bat'
alias irb='irb.bat'
alias rdoc='rdoc.bat'
alias ri='ri.bat'

# Aliases for win git stuff
alias gitk='gitk.cmd'