alias gpb='git push origin HEAD'
alias gst='git status'
alias dc='git diff --cached'
alias dd='git diff'
alias b='git branch'
alias ba='git branch -a'
alias bav='git branch -a -v'
alias f='git fetch'
alias k='gitk --all &'
alias kc='gitk $git_branch &' # GITK for current branch only
alias cm='git commit -m'
alias graph='git log --graph --all --full-history --color --branches --decorate'
alias co='git checkout'
alias slog='git log -10 --pretty=format:"%Cgreen%h %reset %cn (%cr) %s' 
alias lg='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold magenta)<%an>%Creset" --abbrev-commit --date=relative'
alias slg='lg -15'
alias l='git log --pretty=format:"%C(yellow)%h%Creset - %s %C(magenta bold)(%cr by %an)"'
alias s='git status --short'
alias grh='git reset --hard'
alias grs='git reset --soft'
alias grm='git reset --mixed'
alias gau='git add --update'
alias gl='git log --graph --pretty=format":%C(yellow)%h%C(bold magenta)%d%Creset %s %C(white) %an, %ar%Creset"'
alias gli='gl --all --simplify-by-decoration'
alias gr='echo "Rebasing $git_branch from origin";git rebase origin/$git_branch' # rebase current branch from origin
alias gfr='git fetch;gr' # fetch and rebase
alias gsb='git branch -a | egrep "release|hotfix"'
alias e='git g -e';
alias ca='git commit --amend --no-edit'
alias ap='git add -p'
